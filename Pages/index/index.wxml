<view class="ranking">
  <!-- <view class="ranking-title">上映列表</view> -->
  <view class='two'>
    <button class='two-one' bindtap='toOne'>
      <view>正在上映</view>
      <view class="two-line" wx:if="{{two}}"></view>
    </button> 
    <button class='two-one' bindtap='toTwo'>
      <view>即将上映</view>
      <view class="two-line" wx:if="{{!two}}"></view>
    </button> 
</view>
  <view class="ranking-top">
    <view class="ranking-top-grade">评分</view>
    <view class="ranking-top-peoplenumber">购票入口</view>
  </view>
   <block wx:if="{{two}}" wx:for="{{filmDetails}}" wx:for-index="index" wx:for-item="filmDetails">
    <navigator class="ranking-list" url="../movie/movieDetail/movieDetail?id={{filmDetails._id}}" >
      <image src="{{filmDetails.pic}}" class="ranking-list-pic"></image>
      <view class="ranking-list-teachername">{{filmDetails.film_name}}</view>
      <view class="name-content" >主演：{{filmDetails.lead_names}}</view>
      <view class="ranking-list-grade">{{filmDetails.star}}</view>
       <view class="ranking-list-buy">
        <button bindtap="toBuy" class="btn1">购票</button>
      </view>
    </navigator>
   
     
  <!-- <view class="ranking-line"></view> -->
  </block>
  <block wx:if="{{!two}}" wx:for="{{filmDetails}}" wx:for-index="index" wx:for-item="filmDetails">
    <navigator class="ranking-list" url="../movie/movieDetail/movieDetail?id={{filmDetails._id}}" >
      <image src="{{filmDetails.pic}}" class="ranking-list-pic"></image>
      <view class="ranking-list-teachername">{{filmDetails.film_name}}</view>
      <view class="ranking-list-teachclass">主演：{{filmDetails.lead_names}}</view>
      <view class="ranking-list-grade">{{filmDetails.star}}</view>

        

    </navigator>

  <!-- <view class="ranking-line"></view> -->
  </block>
</view>


